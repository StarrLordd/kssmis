@{
    ViewBag.Title = "EnqManegment";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
@using MyProject.Models
@using System.Data
<div class="row" style="min-height:400px;background-color:pink">
    <div class="col-sm-1"></div>
    <div class="col-sm-10" style="background-color:orange">
        <h1 class="text-center">Manege Enquiry</h1>
        <table style="width:100%;color:black;font-size:20px;" border="1">
            <tr>
                <th>SNo.</th>
                <th>NAme</th>
                <th>Email Id</th>
                <th>Mobile No.</th>
                <th>Message</th>
                <th>Date</th>
                <th>Reply</th>
            </tr>
            @{
                DBManager Dm = new DBManager();
                int i = 1;
                string cmd = "select * from Tbl_Enquiry order by EnqId desc";
                DataTable dt = Dm.ExecuteSelect(cmd);
                foreach(DataRow dr in dt.Rows)
                {
                    <tr>
                        <td>@i</td>
                        <td>@dr["EnqName"]</td>
                        <td>@dr["EnqNumber"]</td>
                        <td>@dr["EnqMail"]</td>
                        <td>@dr["EnqMsg"]</td>
                        <td>@dr["EnqDt"]</td>
                        <td><a href="SendSMS/mob=@dr["EnqNumber"]">Send Message</a></td>
                    </tr>
                i++;
                }
                }
        </table>

    </div>
    <div class="col-sm-1"></div>
</div>
