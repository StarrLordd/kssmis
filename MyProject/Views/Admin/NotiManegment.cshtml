@{
    ViewBag.Title = "NotiManegment";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
@using MyProject.Models
@using System.Data
<h2>NotiManegment</h2>
<div class="row" style="background-color:pink;min-height:150px;">
    <div class="col-sm-3"></div>
    <div class="col-sm-6" style="background-color:#97aef8;margin:15px 0px;">
        <h1 class="text-center">Add New Notification</h1><hr />
        @using (Html.BeginForm("NotiManegment","Admin"))
        {
            @Html.TextArea("noti", null, new { placeholder="Type Notification Massege Here...",rows="4",@class="form-control"})<br />
            <input type="submit" value="Add Notification" class="btn btn-info" />
        }
    </div>
    <div class="col-sm-3"></div>

</div>


<div class="row" style="min-height:500px;background-color:#8ae7c4">
    <div class="col-sm-1"></div>
    <div class="col-sm-10" style="background-color:#c0c7e4">
        <table style="width:100%;" border="1">
            <tr>
                <th>SNo.</th>
                <th>Notification Message</th>
                <th>Added On</th>
                <th>Delete</th></tr>
                @{
                    string cmd = "Select *from Tbl_Notification order by NotiId desc";
                    DBManager Dm = new DBManager();
                    int n=1;
                    DataTable td = Dm.ExecuteSelect(cmd);
                    foreach(DataRow dr in td.Rows)
                    {
                        <tr>
                            <td>@n</td>
                            <td>@dr[1]</td>
                            <td>@dr[2]</td>
                            <td class="text-center">
                                <a href="DeleteNoti?nid=@dr[0]">Delete</a>
                            </td>
                        </tr>   
                        n++;
                    }
                    }

            
        </table>
    </div>
    <div class="col-sm-1"></div>

</div>