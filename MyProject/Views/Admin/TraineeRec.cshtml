@{
    ViewBag.Title = "TraineeRec";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

@using MyProject.Models
@using System.Data
<style>
    .btn {
        padding: 4%;
        color: white;
        background: #3f6fec;
        text-decoration: none;
        font-size:18px;
    }
        .btn:hover {
            background: #1a237e;
            color:white;
        }
</style>

    <div class="col-sm-12">
        

        
<p style="color:#6451ce;font-size:30px;text-align:center;font-weight:bold;margin-top:1%;">All Trainees are Here...</p>
  <div class="row">  
    @{
        DBManager Dm=new DBManager();
        string cmd="select * from Tbl_TraineeRegis order by RegNo";
        DataTable dt=Dm.ExecuteSelect(cmd);
        foreach(DataRow dr in dt.Rows)
        {
      <div class="col-sm-3" style="margin-top:2%;">
         
          <div class="col-sm-12"  style="min-height:350px;background:rgba(0,0,0,.5);text-align:center;box-shadow:2px 2px 10px black">
               <div class="col-sm-12">Enrollment No : <span style="font-weight:bold">@dr[0]</span></div>
              <div style="height:200px;"><img src="/Content/UserPics/@dr[5]" height="200" width="200" /></div>
        <span style="font-weight:bold">@dr[2]</span><br /><br />
        
        <a class="btn" href="ViewProfile?tid=@dr[0]">View Profile</a>

              <a class="btn" href="DeleteTrainee?trid=@dr[0]">Delete Account</a>
          </div></div>
        
    }
    }
</div> 


    </div>
