@{
    ViewBag.Title = "DevelopmentExpence";
    Layout = "~/Views/Shared/MZCommonLayout.cshtml";
}

<h2 style="text-align:center">Software Development Expence</h2>
<div class="cool-sm-12">
    <div class="row">
        <div class="col-sm-3"></div>
        <div class="col-sm-6" style="box-shadow:2px 2px 10px black;min-height:400px;padding:2%;">
            <div class="row">
                <div class="col-sm-1"></div>
                <div class="col-sm-10">
                     @using(Html.BeginForm("DevelopmentExpence"))
{
    @Html.TextBox("sname",null,new{placeholder="Enter Software Name", @class="form-control"})<br />
    <select name="exp">
        <option value="null">--Please Select--</option>
        <option>Client Meeting</option>
        <option>Travelling Charge</option>
        <option>Purchansing of Software</option>
        <option>Required Hardware</option>
    </select><br />
    @Html.TextBox("amt",null,new{placeholder="Enter amount of Expance", type="number", @class="form-control"})<br />
    @Html.TextArea("rem",null,new{placeholder="Enter Remark", @class="form-control"})<br /><br />
    <input type="submit" value="submit" class="form-control btn btn-success" />
    <span style="color:red">@ViewBag.msg</span>
}
                </div>
                <div class="col-sm-1"></div>
               
            </div>
        </div>
        <div class="col-sm-3"></div>
    </div>
</div>
