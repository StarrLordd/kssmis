@{
    ViewBag.Title = "TraineePro";
    Layout = "~/Views/Shared/MZCommonLayout.cshtml";
}
@using MyProject.Models
@using System.Data

    <div class="col-sm-12">
        

        
<p style="color:#6451ce;font-size:30px;text-align:center;font-weight:bold;margin-top:1%;">All Trainees are Here...</p>
  <div class="row">  
    @{
        DBManager Dm=new DBManager();
        string cmd="select * from Tbl_TraineeRegis order by RegNo";
        DataTable dt=Dm.ExecuteSelect(cmd);
        foreach(DataRow dr in dt.Rows)
        {
      <div class="col-sm-3" style="margin-top:2%;">
         
          <a style="text-decoration:none;color:black" href="ViewProfile?tid=@dr[0]"><div class="col-sm-12"  style="min-height:300px;background:rgba(0,0,0,.5);text-align:center;box-shadow:2px 2px 10px black">
               <div class="col-sm-12">Enrollment No : <span style="font-weight:bold">@dr[0]</span></div>
              <div style="height:200px;"><img src="/Content/UserPics/@dr[5]" height="200" width="200" /></div>
        <span style="font-weight:bold">@dr[2]</span></div></a></div>
    }
    }
</div> 


    </div>