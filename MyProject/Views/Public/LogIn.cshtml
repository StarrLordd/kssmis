@{
    ViewBag.Title = "LogIn";
    Layout = "~/Views/Shared/PZCommon.cshtml";
}
@{
    if(ViewBag.res!=null)
    {
        <script>alert('@ViewBag.res');</script>
}
}
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
<style>.bacc {
    min-height: 800px;
    background-image:url('../../Content/images/banner4.jpg');
    background-repeat:no-repeat;
    background-size:cover;
}
    .log {
        min-height: 800px;
        background:rgba(256,256,256,.5);
    }
    .loin {
        min-height: 650px;
        box-shadow: 2px 2px 10px black;
        background:rgba(0,0,0,.5);
        margin-top:10%;
    }
    .txt {
        background-color: transparent;
        color: white;
        outline: none;
        margin-top:7%;
    }
    .bttn {
        color: white;
        background-color: #1896d1;
        margin-top: 7%;
        outline:none;
        font-weight:bolder;
        border:none;
    }
</style>
<div class="row">
    <div class="col-sm-12 bacc">
        <div class="row">
        <div class="col-sm-12 log">
            <div class="col-sm-3"></div>
            <div class="col-sm-6">
                <div class="col-sm-12 loin">
                    <div class="row">
                    <p style="color:white;font-size:30px;font-weight:bold;text-align:center;padding:2%;background-color:#1896d1;">Kamadgiri Software Solution</p>
                   <div class="col-sm-2"></div>
                        <div class="col-sm-8">
                            <br /><br /><br />
                           <center><span style="font-size:60px;text-align:center;color:#dee1e6;" class="fa fa-user-circle-o"></span></center>
                            <br /><br />
                             @using(Html.BeginForm("LogIn"))
                    {
                        @Html.TextBox("uid",null,new{placeholder="Username or Email", @class="form-control txt"})
                        @Html.TextBox("pass",null,new{placeholder="Password", @class="form-control txt", type="password"})
                                 <br />
                        @Html.CheckBox("che",null) <span style="color:#929292;">Remember Password</span>
                        <center><input type="submit" value="LOGIN" class="bttn form-control" /></center>
                                 <br />
                                 <p style="color:#dee1e6;text-align:center;font-size:18px">or</p>
                                 <br />
                                 @Html.ActionLink("Forgotten Password", "/", null, new { style="text-decotation:none;color:white;text-align:center"})
                    }
                        </div>
                    <div class="col-sm-2"></div>
                    </div>
                </div>
            </div>
            <div class="col-sm-3"></div>
        </div>
            </div>
       
    </div>
</div>
